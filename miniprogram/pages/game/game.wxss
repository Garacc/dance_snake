/* game.wxss */
.game-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #000000;
  overflow: hidden;
}

/* 顶部信息栏 */
.info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.score {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

.color-indicator {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

/* 游戏画布 */
.game-canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/* 操作区域 */
.control-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 30%;
  display: flex;
  z-index: 5;
}

.left-control, .right-control {
  flex: 1;
  height: 100%;
}

/* 游戏结束弹窗 */
.game-over-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  width: 80%;
  background-color: #222222;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 255, 0, 0.5);
}

.modal-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #00ff00;
}

.final-score {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 20rpx;
  color: #ffffff;
}

.high-score {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #ffff00;
  font-weight: bold;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.restart-btn, .home-btn, .resume-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.restart-btn, .resume-btn {
  background-color: #00ff00;
  color: #000000;
}

.home-btn {
  background-color: #ffffff;
  color: #000000;
}

/* 暂停按钮 */
.pause-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 20;
}

.pause-btn text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 暂停菜单 */
.pause-menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 50;
}

.menu-content {
  width: 80%;
  background-color: #222222;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 255, 0, 0.5);
}

.menu-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #00ff00;
}