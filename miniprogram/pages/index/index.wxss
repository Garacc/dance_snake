/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
  padding: 0 30rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #00ff00;
  text-shadow: 0 0 10rpx rgba(0, 255, 0, 0.5);
}

.score-container {
  margin-bottom: 60rpx;
}

.score-text {
  font-size: 36rpx;
  color: #ffffff;
}

.btn-container {
  width: 80%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.start-btn, .rule-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
}

.start-btn {
  background-color: #00ff00;
}

.rule-btn {
  background-color: #ffffff;
}

.rules-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.rules-content {
  width: 80%;
  background-color: #222222;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 255, 0, 0.5);
}

.rules-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #00ff00;
}

.rules-text {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.rules-text text {
  font-size: 32rpx;
  line-height: 1.5;
}

.close-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #00ff00;
  color: #000000;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}